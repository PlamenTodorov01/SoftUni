import java.util.Scanner;

public class VegetableMarket {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        double priceVeg = Double.parseDouble(scanner.nextLine());
        double priceFru = Double.parseDouble(scanner.nextLine());

        int weightVeg = Integer.parseInt(scanner.nextLine());
        int weightFru = Integer.parseInt(scanner.nextLine());

        double profitVeg = priceVeg * weightVeg;
        double profitFru = priceFru * weightFru;

        double totalProfit = (profitVeg + profitFru) / 1.94;

        System.out.println(totalProfit);
    }
}
